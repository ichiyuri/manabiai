<h1>イベント編集ページ</h1>

<%= form_for(@event) do |f| %>
      <div class="form-group">
        <%= f.label :title, 'タイトル' %>
        <%= f.text_field :title, class: 'form-control', rows: 5  %>
      </div>
      <div class="form-group">
          <%= f.label :start, "開始時間" %>
          <div class='input-group date datepicker'>
              <%= f.text_field :start, class: 'form-control' %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
      </div>
      <div class="form-group">
          <%= f.label :finish, "終了時間" %>
          <div class='input-group date datepicker'>
              <%= f.text_field :finish, class: 'form-control' %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
      </div>
      <div class="form-group">
        <%= f.label :item, '持ち物' %>
        <%= f.text_field :item, class: 'form-control', rows: 5  %>
      </div>
      <div class="form-group">
        <%= f.label :content, '内容' %>
        <%= f.text_field :content, class: 'form-control', rows: 5  %>
      </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
<% end %>

<%= link_to '一覧に戻る', root_path %>