<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <%= form_for(@event) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <h3>タイトル</h3>
          <%= f.text_area :title, class: 'form-control'%>
        </div>
        <div class="form-group">
          <h3>持ち物</h3>
          <%= f.text_area :item, class: 'form-control'%>
        </div>
        <div class="form-group">
          <h3>開始時間</h3>
          <div class='input-group date datepicker'>
              <%= f.text_field :start, data: { :date_format => 'YYYY-MM-DD hh:mm:ss' }, :class => 'form-control datetimepicker', placeholder: 'YYYY-MM-DD hh:mm:ss' %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
        </div>
        <div class="form-group">
          <h3>終了時間</h3>
          <div class='input-group date datepicker'>
              <%= f.text_field :finish, data: { :date_format => 'YYYY-MM-DD hh:mm:ss' }, :class => 'form-control datetimepicker', placeholder: 'YYYY-MM-DD hh:mm:ss' %>
              <span class="input-group-addon">
                  <span class="glyphicon glyphicon-calendar"></span>
              </span>
          </div>
      </div>
        <div class="form-group">
          <h3>内容</h3>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-xs-8">
      <%= render 'events/events', events: @events %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Manabiai</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>


<script>
  var data = {'data-format': 'yyyy-MM-dd hh:mm:ss' };
  $(function(){
      $('.datepicker').attr(data);
      $('.datepicker').datetimepicker();
  });
</script>